@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "註冊登入驗證";
}

<h2>@ViewData["Title"]</h2>
@*<h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>*@
<hr />

<p id="external-login-description" class="text-info">
    您已成功使用<strong>@Model.ProviderDisplayName</strong>註冊登入。
    請輸入Email收取驗證信。
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" required/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> 發送</button>
        </form>
    </div>
</div>

