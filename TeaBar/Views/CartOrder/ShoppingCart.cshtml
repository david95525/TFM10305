
@{
    ViewData["Title"] = "購物車";
}

<style>
    .green {
        background-color: lightgreen;
    }

    #productpic {
        width: 10%;
        height: 10%;
    }
</style>

<fieldset id="ShoppingCart" >
    <div v-if="isExist">
        <h1>購物車</h1>
        <div>
            <h2>{{name}}</h2>
        </div>
        <div v-if="isShow">
            <h4>{{store.storeCity}} {{store.storeName}} </h4>
        </div>
        <div class="font-italic text-danger" style="font-size:24px;"></div>
        <table class="table">
            <thead>
                <tr>
                    <td></td>
                    <td>商品名稱</td>
                    <td>單價</td>
                    <td>數量</td>                 
                    <td>其他加價</td>
                    <td>細項總額</td>
                    <td>詳細</td>
                </tr>
            </thead>
            <tbody v-if="isShow">
                <tr v-for="pd in cartsData">
                    <td>
                        <img v-bind:src="pd.picture" id="productpic" />
                    </td>
                    <td>{{pd.productName}}</td>
                    <td>{{pd.unitPrice}}</td>
                    <td>{{pd.quantity}}</td>
                    <td v-if="pd.isIngredient===2">{{pd.ingredient}}+15元</td>
                    <td v-if="pd.isIngredient===1">{{pd.ingredient}}+10元</td>
                    <td v-if="pd.isIngredient===0">無</td>
                    <td>{{pd.subtotal}}</td>
                    <td>{{pd.size}}/{{pd.sweetness}}/{{pd.ice}}</td>
                    <td>
                        <div v-on:click="Todelete(pd.productId)">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deldialog">刪除</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="card" v-if="isShow">
            <div class="card-header">
                <label>小總計</label>
            </div>
            <div class="card-body">
                <div>
                    <div class="row-1">總額:${{origintotal}}</div>
                    <div class="row-1" v-if="discount!=1">{{discount}}折</div>
                    <div class="row-1" v-if="discount==1">無</div>
                    <div class="row-1">折扣後總額:${{total}}</div>
                </div>
            </div>
        </div>
        <!--#region 刪除資料確認對話盒-->
        <div class="modal fade" id="deldialog" tabindex="-1" aria-hidden="true" title="刪除客戶資料">
            <div class="modal-dialog modal-fullscreen-lg-down">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        確認刪除{{cart.productName}} ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" v-on:click="deleteItem" data-bs-dismiss="modal">是</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">否</button>
                    </div>
                </div>
            </div>
        </div>
        <!--#endregion -->
        <button type="button" class="btn btn-primary" v-on:click="ToOrder">前往結帳</button>
    </div>
    <div v-if="!isExist">
        <div class="alert alert-warning d-flex align-items-center" role="alert" v-if="!isReceiverdetail">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
            <div> 無商品</div>
        </div>
    </div>
</fieldset>
<script>
    var app = new Vue(
            {
                el: '#ShoppingCart',
                data: {
                    cartsData: Array,
                    checked: false,
                    store: {},
                    cart: {},
                    origintotal:0,
                    total: 0,
                    discount:0,
                    name:"",
                    isEdit: false,
                    isShow: false,
                    isIN: false,
                    isExist:false
                },
            //獲取購物車資料
            mounted: function () {
                    $.ajax
                        ({
                            url: "@Url.Action("Readcart", "OrderAPI")",
                            type: 'GET'
                        }).done(
                            function(result, status, xhr) {                               
                                if (result == null) {
                                    alert("沒有商品");
                                }
                                else {
                                    app.cartsData = result;
                                    app.isExist = true;
                                    app.name = app.cartsData[0].userID;
                                for (let i = 0; i < app.cartsData.length; i++) {
                                    app.total = app.total + app.cartsData[i].subtotal;
                                    if (app.cartsData[i].ingredient != "無") {
                                        app.cartsData[i].isIngredient = 1;
                                    } else { app.cartsData[i].isIngredient = 0;}
                                    if (app.cartsData[i].ingredient == "小芋圓" || app.cartsData[i].ingredient == "蜂蜜") {
                                        app.cartsData[i].isIngredient = 2;
                                    }
                                    }
                                app.origintotal = app.total;
                                app.total = Math.round( app.total * app.cartsData[0].discount);
                                app.discount = app.cartsData[0].discount;
                                if (app.discount < 1) {
                                    app.discount = app.discount * 100;
                                    if (app.discount % 10 ===0 ) {
                                        app.discount = app.discount / 10;
                                    }
                                }    
                                }
                            }).fail(function (err) {
                            alert(err.responseText);
                            });
                    //獲取分店資料
                       $.ajax
                        ({
                            url: "@Url.Action("GetStore", "OrderAPI")",
                            type: 'GET'
                        }).done(
                            function(result, status, xhr) {
                                app.store = result;
                                app.isShow = true;
                            }).fail(function (err) {
                            alert(err.responseText);
                            });
                },
                methods:
                {
                    //進入刪除確認
                    Todelete: function (pid) {
                        app.cart = app.cartsData.find(c => c.productId === pid);
                    },//刪除
                    deleteItem: function () {
                        app.total = Math.round(app.total - app.cart.subtotal * app.cart.discount);
                        let index = app.cartsData.indexOf(app.cart);
                        app.cartsData.splice(index, 1);
                        
                            //存session
                            $.ajax(
                                {
                                    url: "@Url.Action("Savecart", "OrderAPI")",
                                    type: 'Post',
                                    contentType: 'application/json',
                                    data: JSON.stringify(app.cartsData),
                                }).done(function (data, status, xhr) {
                                    if (app.cartsData.length <1) {
                                        app.isShow = false;
                                        app.isExist = false;
                                    }

                                }).fail(function (err) {
                                    alert(err.responseText);
                                }
                            );

                    },
                    //去結帳
                    ToOrder: function () {
                        if (app.cartsData.length != 0) {
                            //存session
                            $.ajax(
                                {
                                    url: "@Url.Action("Savecart", "OrderAPI")",
                                    type: 'Post',
                                    contentType: 'application/json',
                                    data: JSON.stringify(app.cartsData),

                                }).done(function (data, status, xhr) {
                                    app.isShow = false;
                                       location.href = "@Url.Action("OrderSteps", "CartOrder")";
                                }).fail(function (err) {
                                    alert(err.responseText);
                                }
                            );
                        } else {
                            alert("沒有商品");
                        }
                    }//ToOrder
                }//methods
            }
    );
</script>
    
