@model TeaBar.Models.Products

@{
    ViewData["Title"] = "Delete";
}
<script>
    $(document).ready(
        function () {
            $("#dialog").modal("show");
        }
    );
</script>

<h1>是否確定刪除?</h1>
<h1 style="color:red">@Html.DisplayFor(model => model.ProductName)</h1>

<div>    
    <dl class="row" id="pic">
        <dt class="col-sm-2">            
            商品名稱:
        </dt>
        <dd class="col-sm-10">
            <h5>@Html.DisplayFor(model => model.ProductName)</h5>
        </dd>        
        <dt class="col-sm-2">
            商品價格:
        </dt>
        <dd class="col-sm-10">
            <h5>@Html.DisplayFor(model => model.UnitPrice)</h5>
        </dd>
        <dt class="col-sm-2">
            商品介紹:          
        </dt>
        <dd class="col-sm-10">
            <h6>@Html.DisplayFor(model => model.Description)</h6>
        </dd>
        <dt class="col-sm-2">
            商品圖片:
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.ViewData.Model.Picture" alt="..." style="width:auto;height:200px"/>            
        </dd>
    </dl>

