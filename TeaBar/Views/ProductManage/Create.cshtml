
@{
    ViewData["Title"] = "新增商品資料";
}

<script>

    $(document).ready(
        function () {
            $("#dialog").modal("show");
        }
    );
</script>

<!-- Modal -->
<fieldset id="新增畫面">
    <div class="modal fade" id="dialog" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">新增畫面</h5>
                    @*X按鈕*@
                    @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
                </div>
                <div class="modal-body">
                    <div id="dialog">
                        <div id="Products" class="row">
                            @*enctype="multipart/form-data"才抓得到照片*@
                            <form enctype="multipart/form-data" action="~/ProductManage/upload" method="post">
                                <div>
                                    <label class="form-label">商品名稱</label>
                                    <input class="form-control" type="text" required name="ProductName" />
                                </div>
                                <div>
                                    <label class="form-label">種類</label>
                                    <select class="form-select" name="CategoryID" id="">
                                        <option v-for="item in categories" :value="item.categoryID">{{item.categoryName}}</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="form-label">價格</label>
                                    <input class="form-control" required name="UnitPrice" id="">
                                </div>
                                <div>
                                    <label class="form-label">介紹</label>
                                    <textarea class="form-control" required name="Description" id="" maxlength="30" cols="30" rows="10"></textarea>
                                </div>
                                <div>
                                    <label class="form-label">選擇圖片</label>
                                    <input class="form-control" type="file" name="Picture" id="inp1" value="選擇圖片" />
                                </div>
                                <br />
                                <div class="modal-footer">
                                    <button class="btn-primary">新增</button>
                                    <input type="button" onclick="javascript:location.href='Index'" value="回上一頁" />
                                </div>
                                <br />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</fieldset>

<script>
    var app = new Vue(
        {
            el: '#新增畫面',
            data: {
                categories: [{
                    "categoryID": 0,
                    "categoryName": "請下拉選擇",
                    "products": null
                }]
            },
            mounted: function () {
                let self = this;
                fetch('/api/categoriesapi')
                    .then(function (productdata) {
                        return productdata.json();
                    })//回傳承諾轉json
                    .then(function (dataJson) {
                        for (let index = 0; index < dataJson.length; index++) {
                            self.categories.push(dataJson[index]);
                        }//逐一push進data:categories
                    });//.then(function (dataJson)
            },//mounted
        }
    );
</script>
